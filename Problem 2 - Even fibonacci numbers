#include <iostream>

using namespace std;

// Declarations
int sum;
int placeOne;
int placeTwo;
int placeThree;

int main()
{
    placeOne = 1;
    placeTwo = 2;
    sum = 2;
    do 
    {
        placeThree = placeOne + placeTwo;
        if (placeThree%2 == 0)
        {
            sum = sum + placeThree;
        }
        placeOne = placeTwo;
        placeTwo = placeThree;
    } while (placeThree < 4000000);
    
    cout << sum << endl;
    
    return 0;
}
